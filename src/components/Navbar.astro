---
const path = new URL(Astro.request.url).pathname;
---

<nav
  class="flex flex-row justify-between pl-[10%] pt-[5%] gap-4 items-center lg:items-stretch"
>
  <img src="/logo.svg" alt="Logo" class="max-w-[60vw] md:w-auto" />
  <div
    class="w-full flex justify-end lg:border-b-2 md:border-black/10 pr-[10%]"
  >
    <svg
      viewBox="0 0 100 80"
      width="40"
      height="40"
      id="hamburger"
      class="lg:hidden"
    >
      <rect width="100" class="h-3"></rect>
      <rect y="30" width="100" class="h-3"></rect>
      <rect y="60" width="100" class="h-3"></rect>
    </svg>
    <ul
      class="uppercase lg:gap-4 xl:gap-12 font-black hidden lg:flex flex-row text-black/40 tracking-widest shrink-0"
    >
      <li><a href="/" class={`${path === "/" && "text-green"}`}>Home</a></li>
      <li>Our Thinking</li>
      <li>Services</li>
      <li>
        <a href="/blogs" class={`${path === "/blogs" && "text-green"}`}>Blogs</a
        >
      </li>
      <li>Contact Us</li>
    </ul>
  </div>
</nav>
<ul
  id="mobilenav"
  class="hidden uppercase gap-y-4 font-black flex-col text-black/40 tracking-widest items-end pr-[10%]"
>
  <li><a href="/" class={`${path === "/" && "text-green"}`}>Home</a></li>
  <li>Our Thinking</li>
  <li>Services</li>
  <li>
    <a href="/blogs" class={`${path === "/blogs" && "text-green"}`}>Blogs</a>
  </li>
  <li>Contact Us</li>
</ul>
<script>
  document.getElementById("hamburger").addEventListener("click", (e) => {
    document.getElementById("mobilenav").classList.toggle("hidden");
    document.getElementById("mobilenav").classList.toggle("flex");
  });
</script>
